<UserControl x:Class="SpectatorWPF.View.ProcessorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpectatorWPF.View"
             xmlns:vm="clr-namespace:SpectatorWPF.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="506" d:DesignWidth="556">
    <Border Margin="10"
            CornerRadius="20" 
            Background="#FF232231">
        <Border.DataContext>
            <vm:ProcessorViewModel/>
        </Border.DataContext>


        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" 
                                Margin="5"
                                Padding="5"
                                Background="#FF2B2A3C"
                                CornerRadius="10">
                <StackPanel>
                    <TextBlock Text="Manufacturer:"
                               Style="{StaticResource PropertyNameTheme}" />

                    <TextBlock Text="{Binding Manufacturer}"
                               Style="{StaticResource PropertyValueTheme}"/>
                </StackPanel>
            </Border>

            <Border Grid.Row="1" 
                    Margin="5"
                    Padding="5"
                    Background="#FF2B2A3C"
                    CornerRadius="10">
                <StackPanel>
                    <TextBlock Text="Model:"
                               Style="{StaticResource PropertyNameTheme}"/>

                    <TextBlock Text="{Binding Model}"
                               Style="{StaticResource PropertyValueTheme}"/>
                </StackPanel>
            </Border>

            <Border Grid.Row="2" 
                    Margin="5"
                    Padding="5"
                    Background="#FF2B2A3C"
                    CornerRadius="10">

                <StackPanel>
                    <TextBlock Text="Description:"
                               Style="{StaticResource PropertyNameTheme}"/>
                    <TextBlock Text="{Binding Description}"
                               Style="{StaticResource PropertyValueTheme}"/>
                </StackPanel>
            </Border>

            <StackPanel Orientation="Horizontal"
                        Grid.Row="3" HorizontalAlignment="Center">

                <StackPanel.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="Margin" Value="13,5,12,0"/>
                    </Style>
                </StackPanel.Resources>

                
                <Border  
                    Padding="5"
                    Width="75"
                    Background="#FF2B2A3C"
                    CornerRadius="10">

                    <StackPanel>
                        <TextBlock Text="Arch.:"
                               Style="{StaticResource PropertyNameTheme}" FontSize="12"/>
                        <TextBlock Text="{Binding Architecture}"
                               Style="{StaticResource PropertyValueTheme}"/>
                    </StackPanel>

                </Border>

                <Border  
                    Padding="5"
                    Width="90"
                    Background="#FF2B2A3C"
                    CornerRadius="10">

                    <StackPanel>
                        <TextBlock Text="Cores:"
                               Style="{StaticResource PropertyNameTheme}" FontSize="12"/>
                        <TextBlock Text="{Binding Cores}"
                               Style="{StaticResource PropertyValueTheme}"/>

                        
                    </StackPanel>

                </Border>
                <Border  
                    Padding="5"
                    Width="80"
                    Background="#FF2B2A3C"
                    CornerRadius="10">

                    <StackPanel>
                        <TextBlock Text="Speed:"
                               Style="{StaticResource PropertyNameTheme}" FontSize="12"/>
                        <TextBlock Text="{Binding Speed}"
                               Style="{StaticResource PropertyValueTheme}"/>
                        <TextBlock Text="Mhz" Margin="0,-5,0,0"
                               Style="{StaticResource PropertyValueTheme}" />
                    </StackPanel>

                </Border>
                <Border  
                    Padding="5"
                    Width="80"
                    Background="#FF2B2A3C"
                    CornerRadius="10">

                    <StackPanel>
                        <TextBlock Text="L2 Catche:"
                               Style="{StaticResource PropertyNameTheme}" FontSize="12"/>
                        <TextBlock Text="{Binding L2Catche}"
                               Style="{StaticResource PropertyValueTheme}"/>
                    </StackPanel>

                </Border>

                <Border  
                    Padding="5"
                    Width="80"
                    Background="#FF2B2A3C"
                    CornerRadius="10">

                    <StackPanel>
                        <TextBlock Text="L3 Catche:"
                               Style="{StaticResource PropertyNameTheme}" FontSize="12"/>
                        <TextBlock Text="{Binding L3Catche}"
                               Style="{StaticResource PropertyValueTheme}"/>
                    </StackPanel>

                </Border>
            </StackPanel>



        </Grid>
    </Border>
</UserControl>
